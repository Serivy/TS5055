{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "listEmittedFiles": false,
    "module": "amd",
    "noEmitOnError": false,
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts"
  ]
}